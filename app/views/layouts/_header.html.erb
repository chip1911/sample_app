<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to Settings.app_logo_text, root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.title"), root_path %></li>
        <li><%= link_to t("static_pages.help.title"), help_path %></li>
        <li><%= link_to t("header.english"), locale: :en %></li>
        <li><%= link_to t("header.vietnamese"), locale: :vi %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.users_text"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <%= t("header.account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" id="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("header.log_out"), logout_path, data: {"turbo-method": :delete} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.signup"), signup_path %></li>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
